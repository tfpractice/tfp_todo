
<% if task.completed? %>
	<%= content_tag(:li, class: "list-group-item clearfix") do -%>
	<%= link_to [@list, task] do %>
	<del><%= task.title %></del>
	<% end %>
	<span class= "pull-right ">
		
	
		
		<%= link_to edit_list_task_path(@list, task), class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-pencil"></span>
		
		<% end %>
		<%= link_to list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary pull-xs-left' do %>
		<span class="glyphicon glyphicon-trash"></span>
		
		<% end %>
	</span>
	
<% end %>

<% elsif task.in_progress? %>
<%= content_tag(:li, class: "list-group-item list-group-item-success clearfix") do -%>
<%= link_to "#{task.title} (In Progress) ", [@list, task] %>
	<span class= "pull-right ">
		
		
		<%= link_to complete_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-ok"></span>
		
		<% end %>
		<%= link_to edit_list_task_path(@list, task), class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-pencil"></span>
		
		<% end %>
		<%= link_to list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary pull-xs-left' do %>
		<span class="glyphicon glyphicon-remove-circle"></span>
		
		<% end %>
	</span>
	
<% end %>
<% elsif task.overdue? %>
<%= content_tag(:li, class: "list-group-item list-group-item-danger clearfix") do -%>
<%= link_to "#{task.title} (Overdue) ", [@list, task] %>
	<span class= "pull-right ">
		
		<%= link_to begin_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-play"></span>
		
		<% end %>
		<%= link_to complete_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-ok"></span>
		
		<% end %>
		<%= link_to edit_list_task_path(@list, task), class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-pencil"></span>
		
		<% end %>
