	<%= link_to "#{task.title} (Pending) ", [@list, task] %>
	<span class= "pull-right ">
		
		<%= link_to begin_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-play"></span>
		
		<% end %>
		<%= link_to complete_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-ok"></span>
		
		<% end %>
		<%= link_to edit_list_task_path(@list, task), class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-pencil"></span>
		
		<% end %>
		<%= link_to list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary pull-xs-left' do %>
		<span class="glyphicon glyphicon-remove-circle"></span>
		
		<% end %>
	</span>
	
<% end %>

<% else %>
<%= content_tag(:li, class: "list-group-item list-group-item-sucess clearfix") do -%>
	<%= link_to "#{task.title}", [@list, task] %>
	<span class= "pull-right ">
		
		<%= link_to begin_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-play"></span>
		
		<% end %>
		<%= link_to complete_list_task_path(@list, task), method: :patch, class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-ok"></span>
		
		<% end %>
		<%= link_to edit_list_task_path(@list, task), class: 'btn btn-primary pull-xs-right' do %>
		<span class="glyphicon glyphicon-pencil"></span>
		
		<% end %>
