<div class="page-header">
  <%= link_to new_list_task_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Task
  <% end %>
  <h1>Listing tasks</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Due date</th>
            <th>Completed on</th>
            <th>List</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tasks) do |task| %>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.due_date %></td>
            <td><%= task.completed_on %></td>
            <td><%= task.list %></td>
            <td><%= link_to 'Show', [@list, task] %></td>
        <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
        <td><%= link_to 'Destroy', [@list, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
