<%= simple_form_for [@list, @task] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :due_date %>
    <%#= f.input :completed_on %>
    <%#= f.association :list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
