<%= simple_form_for(@list) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%#= f.association :user, default: @current_user %>
     <%= f.simple_fields_for :tasks do |p| %>
        <%= p.input :title  %>
        <%= p.input :content %>
    	<%= p.input :due_date %> 
      <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
